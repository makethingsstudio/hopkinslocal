{% extends "_base.twig" %}





{#
   Head

#}
{% block head %}

{% endblock %}





{#
    Header
#}
{% block header %}
<div class="page-hero page-hero--blocal">
  <div class="container">
    <header class="masthead" role="banner">
      <nav role="navigation">
        <ul class="masthead-nav masthead-nav--blocal">
          {% for item in blocal.get_items %}
            <li class="masthead-nav-item">
              <a class="masthead-nav-link {{ item.classes|join(' ') }}" href="{{ item.get_link }}" title="{{ item.title }}">{{ item.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>


      <div class="blocal-intro">
        <div class="blocal-intro__attach">
          <h1 class="blocal-brand">B Local</h1>
          <!-- /.blocal-brand ir -->
        </div>
        <div class="blocal-intro__body">
          <h2 class="blocal-intro__heading">{{ post.headline }}</h2>
          <!-- /.blocal__heading -->
          <div class="blocal-intro__lead u-cms">
            {{ post.lead }}
          </div>
          <!-- /.blocal__content u-cms -->
        </div>
        <!-- /.blocal-intro__body -->
      </div>
      <!-- /.blocal-intro -->
    </header>
  </div>
</div>
{% endblock %}

{% block content %}
  <div class="container">
    <div class="page-intro page-intro--blocal">
      <div class="page-intro-content">
        {{ post.intro_content }}
      </div>
      <!-- /.page-intro-content -->
      {% if post.video %}
      <div class="page-intro-video">
        <a class="page-intro-videolink" id="js-video-gallery" href="{{ post.video }}" title="" data-analytics-event="video, click, homepage">
            <img class="page-intro-videolink-image" src="{{ TimberImage(post.video_thumbnail).src }}" alt="{{ post.video_link_text }}">
            <strong class="page-intro-videolink-text">{{ post.video_link_text }}</strong>
        </a>
      </div>
      <!-- /.page-intro-video -->
      {% endif %}
    </div>
    <!-- /.page-intro -->
  </div>
  <!-- /.container -->



  {% if successStories | length %}
    {% if successStories | length == 1 %}

        <div class="success-story">
            {% for item in successStories | slice( 0, 1 ) %}
            <div class="success-story__left">
                <div class="success-story__attach">
                    <img class="success-story__src" src="{{ item.thumbnail.src() }}" alt="{{ item.thumbnail.alt }}">
                </div>
                <!-- /.success-story__attach -->
            </div>
            <!-- /.success-story__left -->
            <div class="success-story__right">
                <div class="success-story__body">
                    <p class="block-media-type">Success Story</p>
                    <h2 class="block-media-heading block-media-heading-blocal">
                      <a class="block-media-link" href="" title="{{ item.title }}">
                        {{ item.title }}
                      </a>
                    </h2>
                    <div class="success-story__content u-cms">
                        {{ item.post_excerpt | wpautop }}
                        <p>
                            <a class="success-story__more" href="" title="{{ item.title }}">
                                Read More
                            </a>
                        </p>
                    </div>
                    <!-- /.success-story__content u-cms -->
                </div>
                <!-- /.success-story__body -->
            </div>
            <!-- /.success-story__right -->
            {% endfor %}
        </div>
        <!-- /.success-story -->
    {% endif %}
  {% endif %}

  {% if partners | length %}
  <div class="container">
      <section class="partners">
        <header class="partners__header">
            <h2 class="partners__heading">
                Blocal Partners
            </h2>
            <!-- /.partners__heading -->
            {{ post.partner_intro }}
        </header>
        <!-- /.partners__header -->
        <div class="partners__list" id="js-partner-list">
            {% for item in partners %}
            <div class="partner-item">
                <a class="partner-item__link js-partner-link" id="{{ 'partner-' ~ item.ID }}" href="{{ item.link }}" style="background-image: url( {{ item.thumbnail.src }} );" data-partner-id="{{ item.ID }}"></a>
            </div>
            <!-- /.partner-item -->
            <div class="partner-item">
                <a class="partner-item__link js-partner-link" id="{{ 'partner-' ~ item.ID }}" href="{{ item.link }}" style="background-image: url( {{ item.thumbnail.src }} );" data-partner-id="{{ item.ID }}"></a>
            </div>
            <!-- /.partner-item -->
            <div class="partner-item">
                <a class="partner-item__link js-partner-link" id="{{ 'partner-' ~ item.ID }}" href="{{ item.link }}" style="background-image: url( {{ item.thumbnail.src }} );" data-partner-id="{{ item.ID }}"></a>
            </div>
            <!-- /.partner-item -->
            <div class="partner-item">
                <a class="partner-item__link js-partner-link" id="{{ 'partner-' ~ item.ID }}" href="{{ item.link }}" style="background-image: url( {{ item.thumbnail.src }} );" data-partner-id="{{ item.ID }}"></a>
            </div>
            <!-- /.partner-item -->
            {% endfor %}
            <div class="partner-item--placeholder"></div>
            <!-- /.partner-item--placeholder -->
            <div class="partner-item--placeholder"></div>
            <!-- /.partner-item--placeholder -->
        </div>
        <!-- /.partners__list -->
      </section>
      <!-- /.partners -->
  </div>
  <!-- /.container -->

  <div class="partner-panel" id="js-panel">
