{% extends "_base.twig" %}





{#
   Head

#}
{% block head %}

{% endblock %}





{#
    Header
#}
{% block header %}
<div class="page-hero page-hero--blocal">
  <div class="container">
    <header class="masthead" role="banner">
      <nav role="navigation">
        <ul class="masthead-nav masthead-nav--blocal">
          {% for item in blocal.get_items %}
            <li class="masthead-nav-item">
              <a class="masthead-nav-link {{ item.classes|join(' ') }}" href="{{ item.get_link }}" title="{{ item.title }}">{{ item.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>


      <div class="blocal-intro">
        <blocal-intro__attach>
          <h1 class="blocal-brand">B Local</h1>
          <!-- /.blocal-brand ir -->
        </blocal-intro__attach>
        <div class="blocal-intro__body">
          <h2 class="blocal-intro__heading">{{ post.headline }}</h2>
          <!-- /.blocal__heading -->
          <div class="blocal-intro__lead u-cms">
            {{ post.lead }}
          </div>
          <!-- /.blocal__content u-cms -->
        </div>
        <!-- /.blocal-intro__body -->
      </div>
      <!-- /.blocal-intro -->
    </header>
  </div>
</div>
{% endblock %}

{% block content %}
  <div class="container">
    <div class="page-intro">
      <div class="page-intro-content">
        {{ post.intro_content }}
      </div>
      <!-- /.page-intro-content -->
      {% if post.video %}
      <div class="page-intro-video">
        <a class="page-intro-videolink" id="js-video-gallery" href="{{ post.video }}" title="" data-analytics-event="video, click, homepage">
            <img class="page-intro-videolink-image" src="{{ TimberImage(post.video_thumbnail).src }}" alt="{{ post.video_link_text }}">
            <strong class="page-intro-videolink-text">{{ post.video_link_text }}</strong>
        </a>
      </div>
      <!-- /.page-intro-video -->
      {% endif %}
    </div>
    <!-- /.page-intro -->
  </div>
  <!-- /.container -->



  {% if successStories | length %}
    {% if successStories | length == 1 %}
    <div class="container">
            <div class="success-story">
            {% for item in successStories %}
            <div class="block-media-left">
              {% if item.thumbnail|length %}
              <a class="block-media-attach">
                <div class="block-media-ratio">
                  <img class="block-media-src" src="{{ item.thumbnail.src() }}" alt="{{ item.thumbnail.alt }}">
                </div>
              </a>
              {% endif %}
              <p class="block-media-type">HopkinsLocal in Action</p>
              <h2 class="block-media-heading">
                <a class="block-media-link" href="http://hub.jhu.edu/gazette/2014/september-october/focus-malone-hall" title="{{ item.title }}">
                {% if item.post_excerpt|length %}
                  {{ item.post_excerpt }}
                {% else %}
                  {{ item.title }}
                {% endif %}

                </a>
              </h2>

            </div>
            {% endfor %}
      </div>
      <!-- /.success-story -->
    </div>
    <!-- /.container -->
    {% endif %}
  {% endif %}

  {% if partners | length %}
  <div class="container">
      <section class="partners">
        <header class="partners__header">
            <h2 class="partners__heading">
                Blocal Partners
            </h2>
            <!-- /.partners__heading -->
            {{ post.partner_intro }}
        </header>
        <!-- /.partners__header -->
        <div class="partners__list" id="js-partner-list">
            {% for item in partners %}
            <a class="partner-item js-partner-link" id="{{ 'partner-' ~ item.ID }}" href="{{ item.link }}" data-partner-id="{{ item.ID }}">
                <img src="{{ item.thumbnail.src }}" alt="{{ item.title }}" class="partner-item__image">
            </a>
            <!-- /.partner-item -->
            {% endfor %}
            <div class="partner-item--placeholder"></div>
            <!-- /.partner-item--placeholder -->
            <div class="partner-item--placeholder"></div>
            <!-- /.partner-item--placeholder -->
        </div>
        <!-- /.partners__list -->
      </section>
      <!-- /.partners -->
  </div>
  <!-- /.container -->

  <div class="partner-panel">
      <div class="partner-panel__content" id="js-panel-content">

      </div>
      <!-- /.partner-panel__content -->
  </div>
  <!-- /.partner-panel -->

  <script id="tmpl-partner-detail" type="text/x-dot-template">
    {% verbatim %}
    <div class="column column-left">
        <h2>{{=it.title.rendered }}</h2>
        {{~ it.acf.commitment_details :c }}
            <h3>{{=c.commitment_type}}</h3>
            {{=c.commitment_content}}
        {{~}}
        <h2>About {{=it.title.rendered}}</h2>
        {{=it.content.rendered}}
    </div>
    <div class="column column-right">
        {{=it.acf.partner_details}}
    </div>
    {% endverbatim %}
  </script>
  {% endif %}


{% endblock %}
